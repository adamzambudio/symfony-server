{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión - ComoEnCasa{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 420px; width: 100%; border-radius: 8px;">
        
        <div class="text-center mb-4">
            <h2 class="h4">Iniciar sesión en <strong>CEC</strong></h2>
            <small class="text-muted">Bienvenido de nuevo. Por favor, ingresa tus credenciales.</small>
        </div>

        <!-- Formulario de login -->
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Estás conectado como <strong>{{ app.user.userIdentifier }}</strong>, <a href="{{ path('app_logout') }}">Cerrar sesión</a>
                </div>
            {% endif %}

            <div class="mb-3">
                <label for="inputEmail" class="form-label">Correo electrónico</label>
                <input type="email" id="inputEmail" name="email" class="form-control" value="{{ last_username }}" autocomplete="email" required autofocus placeholder="nombre@correo.com">
            </div>

            <div class="mb-3">
                <label for="inputPassword" class="form-label">Contraseña</label>
                <input type="password" id="inputPassword" name="password" class="form-control" autocomplete="current-password" required placeholder="••••••••">
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" name="_remember_me" id="rememberMe" class="form-check-input">
                <label class="form-check-label" for="rememberMe">Recuérdame</label>
            </div>

            <button class="btn btn-primary btn-lg w-100" type="submit">Iniciar sesión</button>
        </form>

        <div class="text-center mt-3">
            <a href="#">¿Olvidaste tu contraseña?</a><br>
            <small>¿Aún no tienes cuenta? <a href="/register">Regístrate aquí</a></small>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
